<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.papiloo.practiceenglish">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.PREVENT_POWER_KEY" />

    <application
        android:name=".Configs"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light"
        tools:ignore="HardcodedDebugMode">
        <activity android:name=".Eamil"></activity>
        <activity android:name=".Idea" />
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other Activities -->
        <activity android:name=".Home" />
        <activity android:name=".GameBoard" />
        <activity android:name=".GameOver" />
        <activity android:name=".About" />
        <activity
            android:name=".CustomAdapter"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".Item"
            tools:ignore="Instantiatable" />
        <activity android:name=".SendWord" />
        <activity android:name=".ReadSite" />
        <activity android:name=".GameBoardSelf" />
    </application>

</manifest>