<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.papiloo.practiceenglish">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name="ir.papiloo.practiceenglish.Configs"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light"
        tools:ignore="HardcodedDebugMode">
        <activity android:name="ir.papiloo.practiceenglish.Idea" />
        <activity
            android:name="ir.papiloo.practiceenglish.SplashScreen"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other Activities -->
        <activity android:name="ir.papiloo.practiceenglish.Home" />
        <activity android:name="ir.papiloo.practiceenglish.GameBoard" />
        <activity android:name="ir.papiloo.practiceenglish.GameOver" />
        <activity android:name="ir.papiloo.practiceenglish.About" />
        <activity android:name="ir.papiloo.practiceenglish.CustomAdapter"
            tools:ignore="Instantiatable" />
        <activity android:name="ir.papiloo.practiceenglish.Item"
            tools:ignore="Instantiatable" />
        <activity android:name="ir.papiloo.practiceenglish.SendWord"/>
        <activity android:name="ir.papiloo.practiceenglish.ReadSite"/>
        <activity android:name="ir.papiloo.practiceenglish.GameBoardSelf"/>

    </application>

</manifest>